{
  "name": "tank-monitoring-system",
  "private": true,
  "version": "1.0.1",
  "description": "Real-time tank monitoring system with CSV file import and serial communication",
  "author": "Martin (shipdocs)",
  "license": "SEE LICENSE IN LICENSE",
  "keywords": [
    "tank-monitoring",
    "maritime",
    "electron",
    "real-time",
    "csv",
    "serial-port"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/shipdocs/tank-monitoring-system.git"
  },
  "bugs": {
    "url": "https://github.com/shipdocs/tank-monitoring-system/issues"
  },
  "homepage": "https://github.com/shipdocs/tank-monitoring-system#readme",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "vite",
    "dev:backend": "nodemon server/index.js",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "start:server": "node server/index.js",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run build\" \"wait-on http://localhost:3001 && electron .\"",
    "electron:pack": "npm run build && electron-builder",
    "electron:dist": "npm run build && electron-builder --publish=never",
    "build:all": "node build-all-platforms.js",
    "release": "node scripts/release.js",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "chokidar": "^4.0.3",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "electron-updater": "^6.6.2",
    "express": "^4.18.2",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "serialport": "^12.0.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-reload": "^2.0.0-alpha.1",
    "esbuild": "^0.25.5",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "nodemon": "^3.0.2",
    "pkg": "^5.8.1",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.tankmonitor.app",
    "productName": "Tank Monitoring System",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "server/**/*",
      "node_modules/electron-updater/**/*",
      "!**/test/**",
      "!**/tests/**",
      "!**/*.map"
    ],
    "includeSubNodeModules": true,
    "extraResources": [
      {
        "from": "dist",
        "to": "dist",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "electron/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "electron/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "electron/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
